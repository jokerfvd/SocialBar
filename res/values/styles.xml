<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--  -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@android:style/Widget.Holo.Light.ActionBar</item>
    </style>

    <style name="AppBaseThemeHome" parent="AppBaseTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Application theme. -->


    <!-- default style -->


    <!-- text style -->
    <style name="app_normal_text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="app_header_text" parent="app_normal_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- fundo -->
    <style name="app_background_base">
        <item name="android:background">@color/app_background</item>
        <item name="android:textColor">@color/app_text_dark</item>
    </style>

    <style name="app_background_profile">
        <item name="android:padding">10dp</item>
    </style>
    <!-- profile -->
    <style name="app_profile_box">
        <item name="android:background">@drawable/border</item>
    </style>

    <style name="app_profile_textbox">
        <item name="android:padding">10dp</item>
    </style>

    <style name="app_home_buttons" parent="app_header_text">
        <item name="android:background">@drawable/home_button_selector</item>
        <item name="android:textColor">@color/app_text_white</item>
        <item name="android:drawableLeft">@drawable/icon_rating_important_white</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">40dp</item>
    </style>

    <style name="edit_search" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/app_base_color_light</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/border_simple</item>
    </style>

</resources>